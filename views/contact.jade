extends layout

block content
  .page-header
    h3 Contact Form

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-12 control-label', for='name') Name
      .col-sm-12
        input.form-control(type='text', name='name', id='name', autofocus=true)
    .form-group
      label(class='col-sm-12 control-label', for='email') Email
      .col-sm-12
        input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-12 control-label', for='message') Body
      .col-sm-12
        textarea.form-control(name='message', id='message', rows='7')
    .form-group
      .col-sm-12
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
